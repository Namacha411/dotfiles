set noswapfile
set nobackup
set autoread

set number
set relativenumber
set incsearch
set hlsearch

set clipboard+=unnamed

syntax on

set laststatus=2
set list
set listchars=tab:»-,trail:-,eol:↲,extends:»,precedes:«,nbsp:%,space:_
set autoindent
set tabstop=4
set shiftwidth=4
set expandtab

set fenc=utf8
set encoding=utf8
